#!/bin/sh
# dependencies: pacman -S xorg-xrandr

chosen=$(printf "internal\\nexternal\\nmanual" | dmenu -fn "Hack-13" -i -p "Select display arrangement:")
echo $chosen

case "$chosen" in
    "internal") xrandr --output eDP-1 --auto --output DP-2 --off;;
    "external") xrandr --output DP-2 --auto --output eDP-1 --off;;
    "manual") arandr
esac

~/.fehbg
