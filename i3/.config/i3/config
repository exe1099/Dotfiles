# => General ----------------------------------------------{{{

# use windows key as main key
set $mod Mod4

# }}}
# => i3 Specific ------------------------------------------{{{

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+Shift+Esc exec i3-msg exit

# }}}
# => i3-Gaps-----------------------------------------------{{{

# hide if only single window
smart_borders on

smart_gaps on
for_window [class="^.*"] border pixel 5
gaps inner 0
gaps outer 0

# }}}
# => Status Bar -------------------------------------------{{{

bar {
    i3bar_command i3bar
    status_command /usr/bin/i3blocks -c ~/.config/i3blocks/config
    position top
    font pango:Hack Nerd Font 7
    strip_workspace_numbers no
    bindsym button4 nop
    bindsym button5 nop
    tray_padding 0
    # separator_symbol "-"
    # workspace_buttons yes
    }

# for calender in status bar??
for_window [class="Yad"] floating enable

# }}}
# => Workspaces related -----------------------------------{{{

# worspace variables
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:"
set $ws4 "4:"
set $ws5 "5:^"
set $ws6 "6:F1"
set $ws7 "7:F2"
set $ws8 "8:"
set $ws9 "9"
set $ws10 "10"

# switch to urgent workspace
bindsym $mod+y [urgent=latest] focus

# previous/next workspace
bindsym $mod+Prior		workspace prev
bindsym $mod+Shift+Prior	move container to workspace prev
bindsym $mod+Next		workspace next
bindsym $mod+Shift+Next		move container to workspace next
bindsym $mod+Tab		workspace back_and_forth

# switch/move window to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+dead_circumflex workspace $ws5
bindsym $mod+Shift+dead_circumflex move container to workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+F1 workspace $ws6
bindsym $mod+Shift+F1 move container to workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+F2 workspace $ws7
bindsym $mod+Shift+F2 move container to workspace $ws7
bindsym XF86Launch1 workspace $ws8
bindsym $mod+8 workspace $ws8
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+F3 workspace $ws8
bindsym $mod+Shift+F3 move container to workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+F4 workspace $ws9
bindsym $mod+Shift+F4 move container to workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Shift+0 move container to workspace $ws10

# }}}
# => Autostart External Scripts----------------------------{{{

# stuff from manjaro
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
# exec --no-startup-id xfce4-power-manager
exec --no-startup-id clipit  # clipboard manager
# exec_always --no-startup-id sbxkb
# exec --no-startup-id start_conky_maia
# exec --no-startup-id start_conky_green
# exec --no-startup-id xautolock -time 10 -locker blurlock
exec_always --no-startup-id fix_xcursor

# wallpaper script
exec --no-startup-id ~/.config/scripts/wallpaper_change Current

# touchpad options (inverse scrolling, palm rejection etc.)
# exec --no-startup-id synclient VertScrollDelta=-112 VertEdgeScroll=0 HorizTwoFingerScroll=1 HorizScrollDelta=-112 PalmDetect=1
exec --no-startup-id xinput set-prop 10 295 1

# network manager
exec --no-startup-id nm-applet
# exec --no-startup-id wicd-curses

# compositor for transparency
exec --no-startup-id compton --daemon

# cloud services
exec --no-startup-id dropbox
exec --no-startup-id ~/Bins/pcloud

# unclutter makes the mouse invisible after a brief period
# makes problem with mod+h/l for selecting different window
# exec --no-startup-id unclutter

# }}}
# => Autostart Programs in Workspaces/Scratchpad ----------{{{

exec --no-startup-id i3-msg 'workspace $ws1; exec firefox'
# exec --no-startup-id i3-msg 'workspace $ws2; exec $TERMINAL ranger; workspace $ws4'
exec --no-startup-id i3-msg 'workspace $ws8; exec thunderbird'
exec --no-startup-id $TERMINAL -c="scratchpad" python3
exec --no-startup-id $TERMINAL -c="neovim_remote" nvr ~/d'

# }}}
# => Assign Windows to Workspaces/Scratchpad --------------{{{

assign [class="okular"] → $ws6
assign [class="libreoffice-startcenter|Soffice"] → $ws7
assign [class="Thunderbird"] → $ws8
assign [title="nvr"] → $ws4

# for presentations with pdfpc
for_window [class="Pdfpc" window_role="presentation"] move to output up
for_window [class="Pdfpc" window_role="presenter"] move to output down

for_window [class="scratchpad"] move scratchpad

# }}}
# => Window Managment Shorcuts ----------------------------{{{

# use mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# toggle tiling/floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# resizing current window
bindsym $mod+Shift+z        resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+u        resize grow height 10 px or 10 ppt
bindsym $mod+Shift+i        resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+o        resize grow width 10 px or 10 ppt

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# usefull with second screen
bindsym $mod+x move workspace to output down

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# focus the child container
#bindsym $mod+d focus child

# split in horizontal orientation
# bindsym $mod+h split h

# split in vertical orientation
# bindsym $mod+v split v

# }}}
# => Window Sizes -----------------------------------------{{{

# for_window [name="Open File"] resize set 640 480
floating_minimum_size 75 x 50
floating_maximum_size 1000 x 600

# }}}
# => Multimedia and Function Keys--------------------------{{{

# change volume; send signal 10 to i3blocks, which triggers volume block (executes volume script)
# exec --no-startup-id volumeicon
bindsym $mod+Ctrl+m                 exec $TERMINAL alsamixer
bindsym XF86AudioRaiseVolume        exec --no-startup-id amixer set Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume        exec --no-startup-id amixer set Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute               exec --no-startup-id amixer set Master toggle && pkill -RTMIN+10 i3blocks
# bindsym XF86WakeUp                exec --no-startup-id ~/.config/scripts/display_select

# display manager
bindsym XF86Display                 exec --no-startup-id ~/.config/scripts/display_select

# enable/disable touchpad
# bindsym XF86ScreenSaver           exec --no-startup-id  ~/.config/scripts/touchpad_toggle

# brightness control
bindsym XF86MonBrightnessUp         exec --no-startup-id ~/.config/scripts/brightness 1
bindsym XF86MonBrightnessDown       exec --no-startup-id ~/.config/scripts/brightness -1

# }}}
# => More Bindings-----------------------------------------{{{

bindsym $mod+Return exec $TERMINAL

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

bindsym $mod+q              kill
bindsym $mod+Shift+q        kill
bindsym $mod+t              split toggle
bindsym $mod+f              fullscreen toggle
bindsym $mod+s              scratchpad show
bindsym $mod+Shift+s        move scratchpad
bindsym $mod+r              exec $TERMINAL ranger
# bindsym $mod+h              exec $TERMINAL htop
bindsym $mod+p              exec $TERMINAL python3
# can't use ~/d here
bindsym $mod+v              exec $TERMINAL nvr ~/d
bindsym $mod+Shift+w        exec --no-startup-id ~/.config/scripts/wallpaper_change Current
bindsym $mod+m              exec --no-startup-id ~/.config/scripts/mount
bindsym $mod+Shift+m        exec --no-startup-id ~/.config/scripts/umount


